<div class="card p-3">
    <div class="d-flex align-items-start">
        <div class="ml-3 w-100 d-flex flex-column">
            <h5 class="mb-0 mt-0">{{ fio }}</h5>
            <small class="mb-3">
                <span class="text-muted">{{ depart }}</span> <br>
                {{ post }}
            </small>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Телефон: <b>{{ phone }}</b></span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="text-muted">Email: <a href= "mailto:{{ email }}">{{ email }}</a></span>
            </div>
        </div>
        <div class="image">
            <img src="/img/users/{{ img }}" height="130px"/>
        </div>
    </div>
</div>